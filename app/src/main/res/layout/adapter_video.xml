<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/crv_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_8sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/_3sdp"
        android:padding="@dimen/_8sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imvImage"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_no_image"
            app:riv_corner_radius="@dimen/_8sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_toEndOf="@+id/imvImage"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txvjudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_toEndOf="@+id/imvImage"
                android:text="Judul"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:id="@+id/txvKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutnama"
            android:layout_marginHorizontal="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toEndOf="@+id/imvImage"
            android:text="Kategori" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_22sdp"
            android:layout_toEndOf="@+id/imvImage">

            <TextView
                android:id="@+id/txvHarga"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="Rp.0"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_53sdp"
            android:layout_toEndOf="@+id/imvImage">


            <Button
                android:id="@+id/txvDetail"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_25sdp"
                android:backgroundTint="@color/teal_700"
                android:text="Detail"
                android:textSize="@dimen/_5sdp" />


        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>